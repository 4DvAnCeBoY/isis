            </dependency>

            <dependency>
                <groupId>org.apache.isis.viewer</groupId>
                <artifactId>wicket-viewer</artifactId>
                <version>0.1.2-incubating-SNAPSHOT</version>
            </dependency>

            <!-- this project's own modules -->
            <dependency>
