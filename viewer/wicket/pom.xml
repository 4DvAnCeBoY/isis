			</dependency>


			<!-- Other -->
			<dependency>
				<groupId>com.google.collections</groupId>
				<artifactId>google-collections</artifactId>
				<version>1.0</version>
			</dependency>

			<dependency>
				<groupId>org.guiceyfruit</groupId>
				<artifactId>guiceyfruit-core</artifactId>
				<version>${guiceyfruit-version}</version>
			</dependency>

			<dependency>
				<groupId>org.guiceyfruit</groupId>
