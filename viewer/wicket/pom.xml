<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.apache.isis</groupId>
		<artifactId>plugins</artifactId>
		<version>0.1-SNAPSHOT</version>
	</parent>

	<groupId>org.apache.isis.extensions</groupId>
	<artifactId>wicket</artifactId>
	<version>0.1-SNAPSHOT</version>

	<name>Wicket Viewer</name>

	<packaging>pom</packaging>

	<repositories>
		<repository>
			<id>guiceyfruit.release</id>
			<name>GuiceyFruit Release Repository</name>
			<url>http://guiceyfruit.googlecode.com/svn/repo/releases/</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<releases>
				<enabled>true</enabled>
			</releases>
		</repository>
	</repositories>

	<properties>
		<wicket.version>1.4.9</wicket.version>
		<wicketstuff.version>1.4.9.1</wicketstuff.version>
		<guiceyfruit-version>2.0</guiceyfruit-version>

		<!-- <pmd.ruleset>../../../STAR/trunk/main/standards/src/main/resources/pmd.xml</pmd.ruleset> 
			<checkstyle.configLocation>../../../STAR/trunk/main/standards/src/main/resources/checkstyle.xml</checkstyle.configLocation> -->
	</properties>

	<modules>
		<module>applib</module>
		<module>model</module>
		<module>facets</module>
		<module>ui</module>
		<module>viewer</module>
	</modules>

	<build>
		<plugins>
			<plugin>
				<groupId>com.agilejava.docbkx</groupId>
				<artifactId>docbkx-maven-plugin</artifactId>
				<inherited>false</inherited>
			</plugin>
		</plugins>
	</build>

	<dependencyManagement>
		<dependencies>

			<!-- Apache Isis Wicket Viewer -->
			<dependency>
				<groupId>org.apache.isis.extensions</groupId>
				<artifactId>wicket-applib</artifactId>
				<version>0.1-SNAPSHOT</version>
			</dependency>
			<dependency>
				<groupId>org.apache.isis.extensions</groupId>
				<artifactId>wicket-applib</artifactId>
				<version>0.1-SNAPSHOT</version>
				<scope>test</scope>
				<type>test-jar</type>
			</dependency>
			<dependency>
				<groupId>org.apache.isis.extensions</groupId>
				<artifactId>wicket-facets</artifactId>
				<version>0.1-SNAPSHOT</version>
			</dependency>
			<dependency>
				<groupId>org.apache.isis.extensions</groupId>
				<artifactId>wicket-facets</artifactId>
				<version>0.1-SNAPSHOT</version>
				<scope>test</scope>
				<type>test-jar</type>
			</dependency>
			<dependency>
				<groupId>org.apache.isis.extensions</groupId>
				<artifactId>wicket-model</artifactId>
				<version>0.1-SNAPSHOT</version>
			</dependency>
			<dependency>
				<groupId>org.apache.isis.extensions</groupId>
				<artifactId>wicket-model</artifactId>
				<version>0.1-SNAPSHOT</version>
				<scope>test</scope>
				<type>test-jar</type>
			</dependency>
			<dependency>
				<groupId>org.apache.isis.extensions</groupId>
				<artifactId>wicket-ui</artifactId>
				<version>0.1-SNAPSHOT</version>
			</dependency>
			<dependency>
				<groupId>org.apache.isis.extensions</groupId>
				<artifactId>wicket-ui</artifactId>
				<version>0.1-SNAPSHOT</version>
				<scope>test</scope>
				<type>test-jar</type>
			</dependency>
			<dependency>
				<groupId>org.apache.isis.extensions</groupId>
				<artifactId>wicket-viewer</artifactId>
				<version>0.1-SNAPSHOT</version>
			</dependency>
			<dependency>
				<groupId>org.apache.isis.extensions</groupId>
				<artifactId>wicket-viewer</artifactId>
				<version>0.1-SNAPSHOT</version>
				<scope>test</scope>
				<type>test-jar</type>
			</dependency>

			<!-- Apache Isis -->
			<dependency>
				<groupId>org.apache.isis</groupId>
				<artifactId>applib</artifactId>
				<version>0.1-SNAPSHOT</version>
			</dependency>
			<dependency>
				<groupId>org.apache.isis.core</groupId>
				<artifactId>metamodel</artifactId>
				<version>0.1-SNAPSHOT</version>
			</dependency>
			<dependency>
				<groupId>org.apache.isis.core</groupId>
				<artifactId>commons</artifactId>
				<version>0.1-SNAPSHOT</version>
			</dependency>
			<dependency>
				<groupId>org.apache.isis.core</groupId>
				<artifactId>commons</artifactId>
				<version>0.1-SNAPSHOT</version>
				<scope>test</scope>
				<type>test-jar</type>
			</dependency>
			<dependency>
				<groupId>org.apache.isis.core</groupId>
				<artifactId>runtime</artifactId>
