            </dependency>
            <dependency>
                <groupId>org.apache.isis.viewer</groupId>
                <artifactId>wicket-viewer</artifactId>
                <version>${isis.viewer-wicket.version}</version>
            </dependency>

            <!-- viewer: restful -->
            <dependency>
