                <version>${isis.runtimes-dflt-profilestores-xml.version}</version>
            </dependency>

            <!-- runtimes-dflt: objectstores: xml -->
            <dependency>
                <groupId>org.apache.isis.runtimes.dflt.objectstores</groupId>
                <artifactId>xml</artifactId>
                <version>${isis.runtimes-dflt-objectstores-xml.version}</version>
            </dependency>

            <!-- runtimes-dflt: objectstores: nosql -->
            <dependency>
                <groupId>org.apache.isis.runtimes.dflt.objectstores</groupId>
                <artifactId>nosql</artifactId>
                <version>${isis.runtimes-dflt-objectstores-nosql.version}</version>
            </dependency>

            <!-- runtimes-dflt: objectstore: sql -->
            <dependency>
                <groupId>org.apache.isis.runtimes.dflt.objectstores</groupId>
                <artifactId>sql-impl</artifactId>
                <version>${isis.runtimes-dflt-objectstores-sql.version}</version>
            </dependency>

            <!-- runtimes-dflt: remoting -->
            <dependency>
                <groupId>org.apache.isis.runtimes.dflt.remoting</groupId>
                <artifactId>common</artifactId>
                <version>${isis.runtimes-dflt-remoting.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.isis.runtimes.dflt.remoting</groupId>
                <artifactId>transport-sockets</artifactId>
                <version>${isis.runtimes-dflt-remoting.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.isis.runtimes.dflt.remoting</groupId>
                <artifactId>marshalling-encode</artifactId>
                <version>${isis.runtimes-dflt-remoting.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.isis.runtimes.dflt.remoting</groupId>
                <artifactId>marshalling-serialize</artifactId>
                <version>${isis.runtimes-dflt-remoting.version}</version>
            </dependency>

            <dependency>
                <groupId>org.apache.isis.runtimes.dflt.remoting</groupId>
