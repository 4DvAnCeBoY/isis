                <version>${isis.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.isis.defaults</groupId>
                <artifactId>security</artifactId>
                <version>${isis.version}</version>
            </dependency>

            <!-- viewer: dnd -->
            <dependency>
