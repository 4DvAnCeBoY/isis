<?xml version="1.0"?>
<!DOCTYPE project [
	<!ENTITY properties SYSTEM "file:../naked-objects/properties.xml">
]>

<project name="Backup" default="all" basedir=".">
	<property name="dir" value="C:\Documents and Settings\rcm\Desktop"/>
	
	<target name ="all">
		<tstamp>
			<format property="date" pattern="yyyyMMdd-HHmm" locale="en" />
		</tstamp>
		<echo>Backup: ${date}</echo>
		
		<zip destfile="${dir}/nakedobjects-${date}.zip" basedir=".." >
			<exclude name="**/release/**/*"/>
			<exclude name="**/build/**/*"/>
			<exclude name="**/tmp/**/*"/>
			
		</zip>
	</target>



</project>


