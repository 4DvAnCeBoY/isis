                <artifactId>testsupport</artifactId>
                <version>0.1-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>org.apache.isis.core</groupId>
                <artifactId>testsupport</artifactId>
                <version>0.1-SNAPSHOT</version>
                <type>test-jar</type>
            </dependency>

			<!-- commons -->
			<dependency>
				<groupId>org.apache.isis.core</groupId>
				<artifactId>commons</artifactId>
				<version>0.1-SNAPSHOT</version>
			</dependency>
			<dependency>
				<groupId>org.apache.isis.core</groupId>
